{
    "Routes": [
        {
            "DownstreamPathTemplate": "/api/customer",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7001
                }
            ],
            "FileCacheOptions": {
                "TtlSeconds": 30,
                "Region": "customercaching"
            },
            "UpstreamPathTemplate": "/customer-service/customer",
            "UpstreamHttpMethod": [
                "Get"
            ],
            "Key": "Customer"            
        },
        {
            "DownstreamPathTemplate": "/api/product",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7002
                }
            ],
            "UpstreamPathTemplate": "/product-service/product"
        },
        {
            "DownstreamPathTemplate": "/api/menu",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7002
                }
            ],
            "UpstreamPathTemplate": "/menu-service/menu"
        },
        {
            "DownstreamPathTemplate": "/api/users",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 8800
                }
            ],
            "UpstreamPathTemplate": "/user-service/user"
        },
        {
            "DownstreamPathTemplate": "/getposts",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 8801
                }
            ],
            "RateLimitOptions": {
                "ClientWhitelist": [],
                "EnableRateLimiting": true,
                "Period": "5s",
                "PeriodTimespan": 1,
                "Limit": 1,
                "HttpStatusCode": 429
            },
            "UpstreamPathTemplate": "/post-service/getposts",
            "Key": "GetPost"
        },
        {
            "DownstreamPathTemplate": "/auth/sign-in",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7003
                }
            ],
            "UpstreamPathTemplate": "/token-service/token",
            "UpstreamHttpMethod":[
                "Post"
            ]
        }
    ],
    "Aggregates":[
        {
            "RouteKeys": ["Customer", "GetPost"],
            "UpstreamPathTemplate": "/customer-with-getpost"
        }
    ],
    "GlobalConfiguration": {
        "RequestIdKey":"X-Correlation-Id",
        "BaseUrl": "http://localhost:7000"
    }
}